<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="SWXamarin.Views.PersonDetailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label FontAttributes="Bold">Nom: </Label>
                <Label Text="{x:Binding Person.name}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontAttributes="Bold">Sexe: </Label>
                <Label Text="{x:Binding Person.gender}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontAttributes="Bold">Couleur de cheveux: </Label>
                <Label Text="{x:Binding Person.hair_color}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontAttributes="Bold">Ann√©e de naissance: </Label>
                <Label Text="{x:Binding Person.birth_year}" />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
